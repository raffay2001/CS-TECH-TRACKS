<%- include('partials/header.ejs') %>

  <h1 class="text-center mt-5" id="trends-heading">Top Trends</h1>
  
  <div class="container pt-1 mb-5 pb-5">
    <div class="row mt-2">
      <% for(let i = 0; i<trendsList.length; i++){ %>
        <div class="col-4">
          <a href="<%= trendsList[i]['link'] %>" target="_blank" class="text-decoration-none">
            <div>
              <div class="border-1 card shadow card-media trend-parent p-0 d-flex justify-content-center align-items-center" style="width: 18rem; height: 23rem; margin-bottom: 2rem;">
                <div>
                  <h5 class="pt-3 trend-title text-center"><%= trendsList[i]['title'] %>
                  </h5>
                  <div class="container-fluid">
                    <img style="height: 10rem;" src="<%= trendsList[i]['picture'] %>" class="trend-pic" alt="trend-pic">
                  </div>
                  <div class="card-body py-0">
                    <a href="<%= trendsList[i]['link'] %>" target="_blank"> 
                      <button class="mt-3 trend-btn mb-3">View More</button>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% } %>

    </div>
  </div>



<%- include('partials/footer.ejs') %>